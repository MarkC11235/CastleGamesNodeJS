<html>
    <head>
        <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="css/user.css">
    </head>
    <body>
        <%- include('partials/topnav.ejs') %>
        <%- include('partials/title.ejs') %>

        <div class="container">
            <div class="item">
                <h1>User : <%=username%></h1>
                <center><a href = "/logout">logout</a></center>
            </div>
    
            <div class="item scroll">
                <h1>Game Data</h1>
                <div class = "display">
                  
                </div>
            </div>

            <div class="item">
                <h1>Themes</h1>
                <div class = "themes">
                    <center><button class = "themeOption" onclick = "updateTheme('main')" id = "main">Main</button></center>
                    <center><button class = "themeOption" onclick = "updateTheme('blue')" id = "blue">Blue</button></center>
                    <center><button class = "themeOption" onclick = "updateTheme('red')" id = "red">Red</button></center>
