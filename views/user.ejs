                    <center><button class = "themeOption" onclick = "updateTheme('yellow')" id = "yellow">Yellow</button></center>
                    <center><button class = "themeOption" onclick = "updateTheme('darkblue')" id = "darkblue">Dark Blue</button></center>
                </div>
            </div>

            <div class="item">
                <h1>Profile Pictures</h1>
                <div class = "profilePictures">
                    <center><button class = "profilePictureOption" onclick = "updateProfilePicture('default')" id = "default"><img src = "images/default.png"></button></center>
                    <center><button class = "profilePictureOption" onclick = "updateProfilePicture('WebsiteIcon')" id = "WebsiteIcon"><img src = "images/WebsiteIcon.png"></button></center>
