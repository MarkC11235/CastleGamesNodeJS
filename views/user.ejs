                    <center><button class = "profilePictureOption" onclick = "updateProfilePicture('leaf')" id = "leaf"><img src = "images/leaf.png"></button></center>
                    <center><button class = "profilePictureOption" onclick = "updateProfilePicture('controller')" id = "controller"><img src = "images/controller.png"></button></center>
                    <center><button class = "profilePictureOption" onclick = "updateProfilePicture('waterdrop')" id = "waterdrop"><img src = "images/waterdrop.png"></button></center>
                </div>
            </div>

        </div>

